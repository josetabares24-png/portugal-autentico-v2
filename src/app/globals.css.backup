@import '@fontsource/plus-jakarta-sans/200.css';
@import '@fontsource/plus-jakarta-sans/300.css';
@import '@fontsource/plus-jakarta-sans/400.css';
@import '@fontsource/plus-jakarta-sans/500.css';
@import '@fontsource/plus-jakarta-sans/600.css';
@import '@fontsource/plus-jakarta-sans/700.css';
@import '@fontsource/plus-jakarta-sans/800.css';
@import '@fontsource/noto-sans/400.css';
@import '@fontsource/noto-sans/500.css';
@import '@fontsource/noto-sans/600.css';
@import '@fontsource/noto-sans/700.css';

@tailwind base;
@tailwind components;
@tailwind utilities;

* {
  scroll-behavior: smooth;
}

body {
  font-family: 'Plus Jakarta Sans', sans-serif;
  color: #1b110d;
  background: #fcf9f8;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Plus Jakarta Sans', sans-serif;
  font-weight: 700;
  letter-spacing: -0.02em;
}

::selection {
  background: rgba(238, 91, 43, 0.2);
  color: #1b110d;
}

::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: #F9F7F2;
}

::-webkit-scrollbar-thumb {
  background: #ee5b2b;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #d94a1a;
}

.azulejo-border {
  border: 2px solid #005F99;
  box-shadow: 4px 4px 0px 0px #005F99;
}

.card-hover {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-hover:hover {
  transform: translateY(-4px);
  box-shadow: 0 20px 40px -12px rgba(238, 91, 43, 0.15);
}

.btn-primary {
  background: #ee5b2b;
  color: white;
  font-weight: 700;
  padding: 12px 24px;
  border-radius: 12px;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.btn-primary:hover {
  background: #d94a1a;
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(238, 91, 43, 0.3);
}

.btn-secondary {
  background: #005F99;
  color: white;
  font-weight: 700;
  padding: 12px 24px;
  border-radius: 12px;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.btn-secondary:hover {
  background: #004a7a;
  transform: translateY(-2px);
}

.btn-outline {
  background: transparent;
  border: 2px solid #ee5b2b;
  color: #ee5b2b;
  font-weight: 700;
  padding: 12px 24px;
  border-radius: 12px;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.btn-outline:hover {
  background: #ee5b2b;
  color: white;
}

.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

a, button {
  transition: all 0.2s ease;
}

button:focus-visible,
a:focus-visible {
  outline: 2px solid #ee5b2b;
  outline-offset: 2px;
}
/* =============================================
   SISTEMA DE DISEÑO "LISBOA DESCODIFICADA"
   Nivel: Premium Único - NO Genérico
   ============================================= */

/* ========== PALETA LISBOA AUTÉNTICA ========== */
:root {
  /* Primarios - Lisboa real */
  --azul-oceano: #0A3D62;      /* Tejo al atardecer */
  --amarillo-tranvia: #F2CB05; /* Tranvía 28 icónico */
  --terracota: #C65D3B;        /* Tejados de Alfama */
  --azul-azulejo: #1B4F72;     /* Azulejos tradicionales */
  
  /* Secundarios - Acentos */
  --crema-pastel: #F4E8C1;     /* Pastéis de nata */
  --verde-mirador: #2C6E49;    /* Miradores verdes */
  --rosa-fado: #D4A5A5;        /* Luces fado */
  
  /* Neutrales - Sofisticados */
  --marfil: #FAF7F0;
  --gris-piedra: #5A5A5A;
  --negro-carbón: #1A1A1A;
  --blanco: #FFFFFF;
}

/* ========== TIPOGRAFÍA CARACTERÍSTICA ========== */

/* Headlines - Serif editorial con personalidad */
@import url('https://fonts.googleapis.com/css2?family=Fraunces:wght@700;900&display=swap');

/* Body - Moderna pero cálida */
@import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap');

/* Accent - Portuguesa auténtica */
@import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@600&display=swap');

.font-headline {
  font-family: 'Fraunces', Georgia, serif;
  font-weight: 900;
  letter-spacing: -0.02em;
}

.font-body {
  font-family: 'DM Sans', system-ui, sans-serif;
  font-weight: 400;
}

.font-accent {
  font-family: 'Cinzel', Georgia, serif;
  font-weight: 600;
  letter-spacing: 0.05em;
}

/* ========== PATRÓN AZULEJOS ÚNICO ========== */

.azulejos-pattern {
  background-color: var(--azul-azulejo);
  background-image: 
    repeating-linear-gradient(
      45deg,
      transparent,
      transparent 35px,
      rgba(242, 203, 5, 0.1) 35px,
      rgba(242, 203, 5, 0.1) 70px
    ),
    repeating-linear-gradient(
      -45deg,
      transparent,
      transparent 35px,
      rgba(242, 203, 5, 0.1) 35px,
      rgba(242, 203, 5, 0.1) 70px
    );
}

.azulejos-border {
  border: 3px solid var(--azul-azulejo);
  border-image: repeating-linear-gradient(
    45deg,
    var(--azul-azulejo),
    var(--azul-azulejo) 10px,
    var(--amarillo-tranvia) 10px,
    var(--amarillo-tranvia) 20px
  ) 10;
}

/* ========== COMPONENTES ÚNICOS ========== */

/* Card Premium con sombra personalizada */
.card-lisboa {
  background: var(--blanco);
  border-radius: 4px; /* Esquinas menos redondeadas = más editorial */
  box-shadow: 
    0 2px 4px rgba(10, 61, 98, 0.08),
    0 8px 16px rgba(10, 61, 98, 0.08);
  border-left: 4px solid var(--amarillo-tranvia);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-lisboa:hover {
  transform: translateY(-4px);
  box-shadow: 
    0 4px 8px rgba(10, 61, 98, 0.12),
    0 16px 32px rgba(10, 61, 98, 0.12);
  border-left-width: 6px;
}

/* Botón Primario - Gradiente Lisboa */
.btn-lisboa {
  background: linear-gradient(135deg, var(--azul-oceano) 0%, var(--azul-azulejo) 100%);
  color: var(--amarillo-tranvia);
  padding: 1rem 2.5rem;
  border-radius: 2px;
  font-family: 'DM Sans', sans-serif;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  font-size: 0.875rem;
  position: relative;
  overflow: hidden;
  border: 2px solid var(--amarillo-tranvia);
  box-shadow: 0 4px 12px rgba(242, 203, 5, 0.3);
}

.btn-lisboa::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(242, 203, 5, 0.2), transparent);
  transition: left 0.5s;
}

.btn-lisboa:hover::before {
  left: 100%;
}

/* Badge Custom */
.badge-lisboa {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: var(--crema-pastel);
  color: var(--negro-carbón);
  padding: 0.5rem 1rem;
  border-radius: 2px;
  font-family: 'Cinzel', serif;
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  border: 1px solid var(--amarillo-tranvia);
}

/* ========== ELEMENTOS DECORATIVOS ========== */

/* Línea decorativa Lisboa */
.lisboa-divider {
  width: 100%;
  height: 4px;
  background: linear-gradient(
    90deg,
    var(--azul-oceano) 0%,
    var(--amarillo-tranvia) 25%,
    var(--terracota) 50%,
    var(--amarillo-tranvia) 75%,
    var(--azul-oceano) 100%
  );
  margin: 3rem 0;
}

/* Número decorativo estilo azulejo */
.numero-azulejo {
  font-family: 'Fraunces', serif;
  font-weight: 900;
  font-size: 6rem;
  background: linear-gradient(135deg, var(--azul-azulejo), var(--azul-oceano));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
}

.numero-azulejo::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 0;
  width: 60%;
  height: 4px;
  background: var(--amarillo-tranvia);
}

/* ========== ANIMACIONES SUTILES ========== */

@keyframes float-lisboa {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.float-lisboa {
  animation: float-lisboa 6s ease-in-out infinite;
}

@keyframes shimmer-azulejo {
  0% { background-position: -1000px 0; }
  100% { background-position: 1000px 0; }
}

.shimmer-azulejo {
  background: linear-gradient(
    90deg,
    var(--azul-azulejo) 0%,
    var(--amarillo-tranvia) 50%,
    var(--azul-azulejo) 100%
  );
  background-size: 1000px 100%;
  animation: shimmer-azulejo 3s infinite;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ========== RESPONSIVE PREMIUM ========== */

@media (max-width: 768px) {
  .font-headline {
    font-size: 2.5rem;
    line-height: 1.1;
  }
  
  .numero-azulejo {
    font-size: 4rem;
  }
}
